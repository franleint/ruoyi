<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TBookBorrowMapper">
    
    <resultMap type="TBookBorrow" id="TBookBorrowResult">
        <result property="borrowId"    column="borrow_id"    />
        <result property="bookId"    column="book_id"    />
        <result property="borrowerId"    column="borrower_id"    />
        <result property="borrowBegin"    column="borrow_begin"    />
        <result property="borrowEnd"    column="borrow_end"    />
        <result property="deadline"    column="deadline"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectTBookBorrowVo">
        select borrow_id, book_id, borrower_id, borrow_begin, borrow_end, deadline, del_flag, create_by, create_time, update_by, update_time, remark from t_book_borrow
    </sql>

    <select id="selectTBookBorrowList" parameterType="TBookBorrow" resultMap="TBookBorrowResult">
        <include refid="selectTBookBorrowVo"/>
        <where>  
            <if test="bookId != null "> and book_id = #{bookId}</if>
            <if test="borrowerId != null "> and borrower_id = #{borrowerId}</if>
            <if test="borrowBegin != null "> and borrow_begin = #{borrowBegin}</if>
            <if test="borrowEnd != null "> and borrow_end = #{borrowEnd}</if>
            <if test="deadline != null "> and deadline = #{deadline}</if>
        </where>
    </select>
    
    <select id="selectTBookBorrowByBorrowId" parameterType="Long" resultMap="TBookBorrowResult">
        <include refid="selectTBookBorrowVo"/>
        where borrow_id = #{borrowId}
    </select>

    <insert id="insertTBookBorrow" parameterType="TBookBorrow" useGeneratedKeys="true" keyProperty="borrowId">
        insert into t_book_borrow
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bookId != null">book_id,</if>
            <if test="borrowerId != null">borrower_id,</if>
            <if test="borrowBegin != null">borrow_begin,</if>
            <if test="borrowEnd != null">borrow_end,</if>
            <if test="deadline != null">deadline,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bookId != null">#{bookId},</if>
            <if test="borrowerId != null">#{borrowerId},</if>
            <if test="borrowBegin != null">#{borrowBegin},</if>
            <if test="borrowEnd != null">#{borrowEnd},</if>
            <if test="deadline != null">#{deadline},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateTBookBorrow" parameterType="TBookBorrow">
        update t_book_borrow
        <trim prefix="SET" suffixOverrides=",">
            <if test="bookId != null">book_id = #{bookId},</if>
            <if test="borrowerId != null">borrower_id = #{borrowerId},</if>
            <if test="borrowBegin != null">borrow_begin = #{borrowBegin},</if>
            <if test="borrowEnd != null">borrow_end = #{borrowEnd},</if>
            <if test="deadline != null">deadline = #{deadline},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where borrow_id = #{borrowId}
    </update>

    <delete id="deleteTBookBorrowByBorrowId" parameterType="Long">
        delete from t_book_borrow where borrow_id = #{borrowId}
    </delete>

    <delete id="deleteTBookBorrowByBorrowIds" parameterType="String">
        delete from t_book_borrow where borrow_id in 
        <foreach item="borrowId" collection="array" open="(" separator="," close=")">
            #{borrowId}
        </foreach>
    </delete>
</mapper>